<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit <%= blog.title %></div>
        <form action="/blogs/<%= blog.id %>?_method=PUT" method="POST" class="ui form">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value='<%= blog.title %>'>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" value='<%= blog.image %>' name="blog[image]">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" required> <%= blog.body %>' </textarea>                
            </div>           
            <div class="field">
                <input class="ui violet basic button" type="submit">
            </div>                         
        </form>

    </div>
<% include ./partials/footer %>