<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header"><%= blog.title %></div>
        <div class="ui top attached ">
            <div class="item">
                <img src="<%=blog.image %>" alt="<%= blog.title %>" class="ui centered rounded image">
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%= blog.body %></p>
                </div>
                <a class="ui blue button basic" href="/blogs/<%= blog.id %>/edit">Edit</a>
                <form id='deleteForm' action="/blogs/<%= blog.id %>?_method=DELETE" method='POST'>
                    <button class="ui basic red button">Delete</button>
                </form>
            </div>
            
        </div>
       
        
       

    </div>
<% include ./partials/footer %>